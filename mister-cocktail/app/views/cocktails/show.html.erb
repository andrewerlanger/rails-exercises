<div class="show-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.photo, crop: :fill %>')">
  <div class="banner-content">
    <h1><%= @cocktail.name.upcase %></h1>
  </div>
</div>

<div class="container body-height">
  <h4 class="text-center" style="padding-top: 15px"><strong>What you need:</strong></h4>
  <div class="ingredient-box">

    <!-- TABLE -->
    <table style="width:350px">
      <tr align="left">
        <th style="padding-bottom: 50px"></th>
        <th>Quantity</th>
        <th style="padding-left: 15px">Ingredient</th>


      </tr>

    <% @cocktail.doses.each do |dose| %>

      <tr>
        <td><%= link_to '', cocktail_dose_path(@cocktail, dose), method: :delete, class: "fas fa-minus", style:"color: #EF6064; padding-right: 15px;" %></td>
        <td><%= dose.description %></td>
        <td style="padding-left: 15px"><%= dose.ingredient.name %></td>
      </tr>

    <% end %>
    </table>
    <p style="margin-top: 50px"><%= link_to "+ ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-success'  %></p>

  </div>
</div>
