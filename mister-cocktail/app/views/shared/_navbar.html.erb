  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50, style: "margin-left: 25px" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Links -->
    <%= link_to "Random", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "About", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Contact", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "ADD", new_cocktail_path, class: "btn btn-danger btn-sm", style: "margin: 0 0 0 25px" %>

    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">

      </div>
    </div>
