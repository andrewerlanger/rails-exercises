<div class="container" style="margin-top: 25px;">

  <h2>Add New Task</h2>
  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-sm btn-primary', style:'margin-top: 10px;'%>
  <% end %>

</div>
