<div class="container">
<h1>All Tasks</h1>

<h3><%= link_to "add new task", new_path, class: 'btn btn-success' %></h3>

  <% @tasks.each do |task| %>

  <p>
    <% if task.completed == true %>
    [x]
    <% else %>
    [&nbsp&nbsp]
    <% end %>
    <%= task.title %>
    <%= link_to "", task_path(task), class: 'fas fa-trash-alt', method: :delete %>
  </p>

  <% end %>

</div>
